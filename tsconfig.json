{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "es2015.promise"],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noErrorTruncation": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist"
    },

    "exclude": ["node_modules", "dist"]
}
